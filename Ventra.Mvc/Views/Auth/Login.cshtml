@using Ventra.Mvc.ViewModel.AccountViewModels
@model LoginViewModel
@{
    var pageName = "Página de login";
    ViewData["Title"] = pageName;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container container-tight my-5 px-lg-5">
    <div class="text-center mb-4">
        <a href="." class="navbar-brand navbar-brand-autodark">
            <img src="~/img/static/logo.png" height="360" alt="Logo">
        </a>
    </div>

    <div class="card card-md">
        <div class="card-body">
            <h2 class="h3 text-center mb-3">
                Acesse sua conta
            </h2>

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Insira seu e-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label for="password" class="form-label">Senha</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Insira sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">Lembrar senha</label>
                    </label>
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center text-secondary mt-3">Ainda não possui conta? <a asp-action="Register" tabindex="-1">Cadastre-se</a></div>
</div>