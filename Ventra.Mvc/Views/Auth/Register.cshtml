@using Ventra.Mvc.ViewModel.AccountViewModels
@model RegisterViewModel;
@{
    var pageName = "Cadastrar usuário";
    ViewData["Title"] = pageName;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container container-tight my-5 px-lg-5">
    <div class="text-center mb-4">
        <a href="." class="navbar-brand navbar-brand-autodark">
            <img src="~/img/static/logo.png" height="360" alt="Logo">
        </a>
    </div>

    <div class="card card-md">
        <div class="card-body">
            <h2 class="h3 text-center mb-3">
                Cadastre-se
            </h2>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-2">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center text-secondary mt-3">Já possui uma conta? <a asp-action="Login" tabindex="-1">Login</a></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}