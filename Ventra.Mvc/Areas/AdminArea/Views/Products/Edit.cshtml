@model Ventra.Domain.Entities.Product

@{
    var pageName = "Editar produto";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@pageName</h4>
                </div>
                <form asp-action="Edit">
                    <div class="card-body">
                        <div class="row g-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Stock" class="form-label"></label>
                                <input asp-for="Stock" class="form-control" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IsFeatured" class="form-label"></label>
                                <input asp-for="IsFeatured" class="form-check-input" />
                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex align-items-center">
                            <a asp-action="Index" class="btn btn-link">Voltar para a lista</a> |
                            <a asp-controller="Photos" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-link">Editar imagens</a>
                            <button type="submit" class="btn btn-primary ms-auto">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/maskmoney/jquery.maskmoney.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Price').maskMoney({ prefix: 'R$ ', allowNegative: true, thousands: '.', decimal: ',', affixesStay: false });
        });
    </script>
}




